<%= bootstrap_form_for(@brain_candy) do |f| %>
    <%= f.alert_message "Please fix the errors below" %>
    <%= f.text_field :name, placeholder: "hello" %>
    <%= f.select :difficulty_level_id, DifficultyLevel.all.map{|dl| [dl.name, dl.id]} %>

    <%= f.actions do %>
        <%= f.submit "Submit" %>
    <% end %>
<% end %>
